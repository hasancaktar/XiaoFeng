namespace XiaoFeng.Cryptography
{
    /// <summary>
    /// 加密解密接口
    /// </summary>
    interface ICrypto
    {
        /// <summary>
        /// 加密
        /// </summary>
        /// <param name="data">明文</param>
        /// <param name="key">密钥</param>
        /// <returns></returns>
        string Encrypt(string data, string key = "");
        /// <summary>
        /// 解密
        /// </summary>
        /// <param name="data">密文</param>
        /// <param name="key">密钥</param>
        /// <returns></returns>
        string Decrypt(string data, string key = "");
    }
}